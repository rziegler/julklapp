import javax.ws.rs.core.MediaType;

import ch.bbv.julklapp.core.dao.Circle;

import com.sun.jersey.api.client.Client;
import com.sun.jersey.api.client.WebResource;
import com.sun.jersey.api.client.WebResource.Builder;


public class JulklappClient {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		Client client = Client.create();
		WebResource resource = client.resource("http://localhost:8888/");
		WebResource resourceWithPath = resource.path("/circles/first");
		
		Builder builder = resourceWithPath.accept(MediaType.APPLICATION_JSON).type(MediaType.APPLICATION_JSON);
		
		Circle result = putCircle(builder, "second");
		
		System.out.println("The resulting circle is " + result.getName());
	}

	private static Circle putCircle(Builder builder, String name) {
		Circle circle = new Circle();
		circle.setName(name);
		Circle result = builder.put(Circle.class, circle);
		return result;
	}
	
	private static Member putMember(Builder builder, Member member) {
		Member result = builder.put(Member.class, member);
		return result;
	}
	

}
